<% if @posts.present?%>

    <div class="col-md-8">
      <% @posts.each do |post| %>
          <article>
            <!-- Blog item Start -->
            <div class="blog-item-wrap">
              <!-- Post Format icon Start -->
              <div class="post-format">
                <span><i class="ico-bookmark"></i></span>
              </div><!-- Post Format icon End -->
              <h2 class="blog-title"><a href="#"><%=post.title %></a></h2>
              <div class="entry-meta">
                <span class="meta-part"><i class="ico-user"></i> <a href="#"><%= post.user.name%></a></span>
                <span class="meta-part">
                <i class="ico-calendar-alt-fill"></i>
                <a href="#"> <%= time_ago_in_words(post.created_at) %> ago  </a>
              </span>
                <span class="meta-part">
                <i class="ico-comments"></i>
                <a href="#"><%= post.comments.count %></a>
              </span> <span class="meta-part">
              <i class="ico-tag"></i>
              <a href="#">Tech</a></span>
                <span class="meta-part">
                <i class="ico-heart"></i>
                <a href="#"><%= post.post_votes.where(vote:true).count %></a>
              </span>
              </div><!-- Entry Meta End-->

              <!-- Post Content Start -->
              <div class="post-content">
                <%= post.content.html_safe %>
              </div><!-- Post Content End -->
              <hr>
              <div class="post-content">
                <h2>Comments</h2>
                <% post.comments.each do |comment| %>
                 <%=comment.user.name%> commented: <%= comment.content%>
                    <hr>
                <% end%>
              </div><!-- Post Content End -->
            </div><!-- Blog item End -->
          </article>
      <% end %>

    </div>


<% else %>
    <h3>No any posts here.<%= link_to "Be the first one of the hub?", new_user_post_path(@user) %></h3>
<% end %>