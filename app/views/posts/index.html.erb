<% if @posts.present?%>
    <div class="page-header">
      <h1 class="post-header">Posts</h1>
      <div class="btn-post-operation">
        <%= link_to "New post", new_user_post_path(@user), :class => "btn btn-primary" %>
      </div>
    </div>


    <div class="list-group">
      <% @posts.each do |post| %>
          <a href="<%=user_post_path(@user, post)%>" class="list-group-item">
            <h4 class="list-group-item-heading"><%= post.title %></h4>
            <span class="list-group-item-text">
              {{ <%= post.updated_at.to_time.to_i * 1000 %> | date:'medium'}}
            </span>
          </a>
      <% end %>
    </div>

<% else %>
    <h3>You haven't write any posts.<%= link_to "Start your first post?", new_user_post_path(@user) %></h3>
<% end %>



