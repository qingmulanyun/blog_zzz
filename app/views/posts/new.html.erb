<%= form_for :post, url: user_posts_path do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :content %><br>
      <%= f.text_area :content %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>



<p class="navbar-text pull-left">
<%= link_to "Cancel", user_posts_path(@user), :class => 'btn btn-primary'%>