<div class="col-md-8 single-post" id="content">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <ul class="pager">
          <li class="previous">
            <a class="default-btn" href="<%= user_posts_path %>"><i class="fa fa-angle-double-left" aria-hidden="true"></i> Back to the list</a>
          </li>
        </ul>
        <!-- Blog Article Start-->
        <article class="single-post-content">

          <%= form_for :post, url: user_posts_path do |f| %>
              <%= render 'form', f: f %>
          <% end %>
        </article>
      </div>

    </div>
  </div>
</div><!-- Content End -->
