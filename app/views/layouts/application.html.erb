<!DOCTYPE html>
<html ng-app="blogzzz">
<head>
  <title>BlogZzz</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <style>
    #map {
      height: 400px;
      width: 100%;
    }
  </style>

  <script async defer
          src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['GOOGLE_MAP_API_KEY']%>&callback=initMap">
  </script>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag %>

  <meta property="og:type"               content="website" />
  <meta property="og:title"              content="A blog for you to memorize your daily life." />
  <meta property="og:description"        content="Sign up to start your new posts life." />
  <meta property="og:image"              content="http://static01.nyt.com/images/2015/02/19/arts/international/19iht-btnumbers19A/19iht-btnumbers19A-facebookJumbo-v2.jpg" />

  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:site" content="@Wenbo199019" />
  <meta name="twitter:creator" content="@Wenbo199019">
  <meta name="twitter:title" content="A blog for you to memorize your daily life." />
  <meta name="twitter:description" content="Sign up to start your new posts life." />
  <meta name="twitter:image" content="http://graphics8.nytimes.com/images/2012/02/19/us/19whitney-span/19whitney-span-articleLarge.jpg">

</head>

<body>
<h3>My Google Maps Demo</h3>
<div id="map"></div>
<script>
    function initMap() {
        var uluru = {lat: 37.759921, lng: 37.759921};
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 4,
            center: uluru
        });
        var marker = new google.maps.Marker({
            position: uluru,
            map: map
        });
    }
</script>
<header class="site-header">
  <nav class="navbar navbar-default navbar-intimate"
       data-offset-top="50" data-spy="affix">
    <div class="container">
      <div class="navbar-header">
        <!-- Start Toggle Nav For Mobile -->
        <button class="navbar-toggle" data-target="#navigation" data-toggle="collapse" type="button">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <div class="logo">
          <a class="navbar-brand" href="/"><i class="ico-3dglasses"></i></a>
        </div>
      </div>
      <div class="navbar-collapse collapse" id="navigation">
        <ul class="nav navbar-nav navbar-left">
          <li>
            <a href="/">Home</a>
          </li>
      <% if user_signed_in? %>
        <li>
           <a href="/public_hub">Posts hub</a>
          </li>
      <% end %>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle profile-list" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  <img class="avatar" src="<%= current_user.image_url.blank? ? default_profile_img_url : current_user.image_url %>">
                  <%=current_user.name%> <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> </li>
                  <li role="separator" class="divider"></li>
                  <li> <%= link_to "Log out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
                </ul>
              </li>
           <% else %>
              <li>
                <a href="<%= new_user_session_path %>">Sign In</a>
              </li>
              <li>
                <a href="<%= new_user_registration_path %>">Sign Up</a>
              </li>
          <% end %>
        </ul>
      </div><!-- Navigation End -->
    </div>
  </nav>
</header><!-- Header Section End -->

 <!--Content Start -->
<div id="content" class="personal-container">
  <div class="container">
    <div class="row">
     <%= yield %>
      <%= render partial: 'layouts/right_col_private' unless %w(devise/sessions devise/registrations ).include? params[:controller] %>
    </div>
  </div>
</div><!-- Content End -->
<!-- Footer Start -->
<%= render partial: 'layouts/footer'%>
<!-- js  -->
</body>
</html>
