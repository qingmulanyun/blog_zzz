    <li>
      <a href="#">Blog</a>
      <ul>
        <li>
          <a href="blog.html">Blog View</a>
        </li>
        <li>
          <a href="single.html">Single Post</a>
        </li>
      </ul>
    </li>
    <li>
      <a href="contact.html">Contact</a>
    </li>
    <li>
      <a href="#">Download</a>
    </li>
  </ul><!-- Mobile Menu End -->
</header><!-- Header Section End -->
<!-- Hero Area Start -->
<section class="text-center" id="hero-area">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="intro-area">
          <h3>Welcome To</h3>
          <h2 class="page-title">BlogZzz</h2>
        </div>
      </div>
    </div>
  </div>
</section><!-- Hero Area End -->
<!-- Content Start -->
<div id="content">
  <div class="container">
    <div class="row">
     <%= yield %>
      <%= render partial: 'layouts/right_col'%>
    </div>
  </div>
</div><!-- Content End -->
<!-- Footer Start -->
<%= render partial: 'layouts/footer'%>
