<% title "重置密码" %>

<div class="row container">
  <div class="col s12 m6 l4 card login-card">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put, class: 'login-form'}) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        <div class="card-content">
          <span class="card-title">重置密码</span>
          <div class="row">
            <div class="input-field col s12">
              <i class="material-icons prefix">lock</i>
              <input type="password" class="validate login-input" name="user[password]" id="user_password" required/>
              <label for="user_password">新密码：</label>
            </div>

            <div class="input-field col s12">
              <i class="material-icons prefix">lock</i>
              <input type="password" class="validate login-input" name="user[password_confirmation]" id="user_password_confirmation" required/>
              <label for="user_password_confirmation">新密码确认：</label>
            </div>

            <div class="col s12">
              <button class="btn waves-light login-btn" type="submit" data-disable-with="重置密码…">确认重置
              </button>
            </div>
          </div>
        </div>
    <% end %>
  </div>
  <div class="col s12 m6 l8"></div>
</div>