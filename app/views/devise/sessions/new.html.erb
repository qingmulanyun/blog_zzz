<div class="row container">
  <div class="col s12 m6 l4 card login-card">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'login-form'}) do |f| %>
        <div class="card-content">
          <span class="card-title">邮箱登录</span>
          <div class="row">
            <div class="input-field col s12">
              <i class="material-icons prefix">email</i>
              <input type="email" class="validate login-input" name="user[email]" id="email" required />
            </div>
            <div class="input-field col s12">
              <i class="material-icons prefix">lock</i>
              <input type="password" class="validate login-input" name="user[password]" id="password" required/>
            </div>
            <div class="col s12">
              <button class="btn waves-effect waves-light" type="submit" data-disable-with="正在登录…">登录
                <i class="material-icons right">send</i>
              </button>
            </div>
          </div>

          <p>
            <%- if devise_mapping.omniauthable? %>
                <%- resource_class.omniauth_providers.each do |provider| %>
                    <i class="fa fa-google"></i><a href="<%= omniauth_authorize_path(resource_name, provider) %>" class="link-default"> Google Login</a>
                <% end -%>
            <% end -%>
          </p>
        </div>
        <div class="card-action">
          <a href="<%= new_registration_path(resource_name) %>" >免费注册</a>
        </div>
    <% end %>
  </div>
  <div class="col s12 m6 l8"></div>
</div>